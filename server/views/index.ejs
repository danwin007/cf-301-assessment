<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/modules.css" />
  <link rel="stylesheet" href="/css/breakpoints.css" />

  <!-- Handlebars Template -->
  <script id="newCharTemplate" type="text/x-handlebars-template">
    <div class="divName">
      <h1>{{name}}</h1>
      <div class="divLikes">
        {{likes}}
      </div>
    </div>
  </script> 
   <!-- Handlebars Template -->
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters">

        <% for(let x = 0; x < results.length; x++) { %>
          <div class="character">
            <header class="charNameHeader">
              
              <h2 class="charName"><%= results[x].name %></h2>
            </header>
            <span><%= results[x].likes || 0 %></span>
            <button class="upvote">Upvote</button>
          </div>
          <% } %>
          
          <div class="newCharDiv">NewChar</div>
    </section>

<form method="get" action="/characters?page=x">
  <button class="getMore">Get More Characters</button>
</form>

  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.3/handlebars.min.js"></script>
  <script   src="https://code.jquery.com/jquery-3.4.1.min.js"   integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="   crossorigin="anonymous"></script>
  <script src="/js/app.js"></script>
</body>

</html>